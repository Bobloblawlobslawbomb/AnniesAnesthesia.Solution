@{
  Layout = "_Layout";
}

@model AnniesAnesthesia.Models.Patient

<h4>Add a new Patient</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})
  <br>

  @Html.LabelFor(model => model.RealBirthDate)
  @Html.TextBoxFor(model => model.RealBirthDate, new {@class="form-control", @type="date", @required="required"})

  @*@Html.LabelFor(model => model.Birthdate)
  @Html.TextBoxFor(model => model.Birthdate, new { @class="form-control", @required="required", value=DateTime.Now.ToString("yyyy-MM-dd") })*@

  <br>
  @Html.LabelFor(model => model.Ailment)
  @Html.TextBoxFor(model => model.Ailment, new { @class="form-control", @required="required"})
  <br>
  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId")
  <br>
  <input type="submit" value="Add new patient" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Show all patients", "Index")</p>