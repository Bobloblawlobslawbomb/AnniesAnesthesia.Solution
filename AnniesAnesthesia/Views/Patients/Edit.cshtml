@{
  Layout = "_Layout";
}

@model AnniesAnesthesia.Models.Patient

<h2>Edit</h2>

<h4>Edit this Patient: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)
  <br>
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Birthdate)
  @Html.TextBoxFor(model => model.Birthdate)
  <br>
  @Html.LabelFor(model => model.Ailment)
  @Html.TextBoxFor(model => model.Ailment)
  <br>
  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId")
  <br>
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>